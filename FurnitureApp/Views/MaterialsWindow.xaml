        <Label Content="Всего материалов:" HorizontalAlignment="Left" Margin="756,13,0,0" VerticalAlignment="Top"/>
        <Label Content="Выведено:" HorizontalAlignment="Left" Margin="928,14,0,0" VerticalAlignment="Top"/>
        <Label Name ="AllCountLabel" Content="" HorizontalAlignment="Left" Margin="873,13,0,0" VerticalAlignment="Top" Width="50"/>
        <Label Name="DisplayedLabel" Content="" HorizontalAlignment="Left" Margin="1000,14,0,0" VerticalAlignment="Top" Width="50"/>
    </Grid>
</Window>
