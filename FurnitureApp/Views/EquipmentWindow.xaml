        mc:Ignorable="d"
        Title="Оборудование" Height="482" Width="384">
    <Grid>
        <TextBox Name="NameTextBox" HorizontalAlignment="Left" Height="40" Margin="185,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="140" FontSize="16" FontFamily="Arial"/>
